{
	"name": "kristofferkarlaxelekstrand.github.io",
	"version": "1.0.0",
	"description": "Kristoffer Karl Axel Ekstrand's list of workplaces and projects",
	"directories": {
		"doc": "docs"
	},
	"scripts": {
		"dev": "concurrently \"npm run watch\" \"serve docs\"",
		"build": "node build/build-manager.js full",
		"watch": "concurrently \"npm run watch:css\" \"npm run watch:js\"",
		"watch:css": "sass --watch src/styles:docs/styles",
		"watch:js": "babel src/scripts --out-dir docs/scripts --presets=@babel/preset-env --config-file ./babel.config.js --watch",
		"test": "jest",
		"validate": "npm run validate-html && npm run test",
		"validate-html": "html-validate docs/*.html",
		"clean": "rm -rf docs/styles docs/scripts docs/index.html docs/robots.txt docs/sitemap.xml docs/site.webmanifest docs/favicon.ico docs/apple-touch-icon.png docs/favicon-32x32.png docs/icon-192.png docs/icon-512.png docs/icon-mask.png docs/icon.svg docs/favicon-html.txt docs/sw.js",
		"png:optimize": "node build/build-png-optimizer.js",
		"svg:optimize": "node build/build-svg-optimizer.js",
		"lint": "stylelint **/*.scss --fix && markdownlint *.md reference/*.md --fix",
		"pretty": "prettier --write \"src/**/*.{js,scss}\" \"*.md\"",
		"size": "echo 'Build Output Sizes:' && du -sh docs/* && echo '' && echo 'Main Files:' && wc -c docs/scripts/app.js docs/styles/main.css docs/index.html",
		"lighthouse": "npx lighthouse --chrome-flags=\"--headless\" --output=html --output-path=./lighthouse/lighthouse-report.html https://kristofferkarlaxelekstrand.github.io/",
		"update": "npm update && npm audit fix"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/KristofferKarlAxelEkstrand/kristofferkarlaxelekstrand.github.io"
	},
	"keywords": [
		"Kristoffer",
		"Ekstrand",
		"Waveforms",
		"JavaScript",
		"Design",
		"Code",
		"Text",
		"Sound",
		"Web Development",
		"UX Design",
		"Music Technology"
	],
	"author": "Kristoffer Ekstrand",
	"license": "ISC",
	"devDependencies": {
		"@babel/cli": "^7.28.3",
		"@babel/core": "^7.28.4",
		"@babel/preset-env": "^7.28.3",
		"autoprefixer": "^10.4.21",
		"concurrently": "^9.2.1",
		"core-js": "^3.45.1",
		"cssnano": "^7.1.1",
		"html-entities": "^2.6.0",
		"html-minifier-terser": "^7.2.0",
		"html-validate": "^10.0.0",
		"jest": "^30.1.3",
		"jest-environment-jsdom": "^30.1.2",
		"lighthouse": "^12.8.2",
		"markdownlint": "^0.38.0",
		"markdownlint-cli": "^0.45.0",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"prettier": "^3.6.2",
		"sass": "^1.92.1",
		"serve": "^14.2.5",
		"sharp": "^0.34.3",
		"stylelint": "^16.24.0",
		"stylelint-config-standard-scss": "^15.0.1",
		"stylelint-order": "^7.0.0",
		"svgo": "^4.0.0",
		"terser": "^5.44.0"
	}
}
